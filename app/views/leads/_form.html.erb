<%= form_with(model: lead, local: true, class: "space-y-6", data: { controller: "contact-validation" }) do |form| %>
  <% if lead.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(lead.errors.count, "error") %> prohibited this lead from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700">
            <% lead.errors.each do |error| %>
              <li class="list-disc list-inside"><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Contact Methods Required Notice -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">Contact Information Required</h3>
        <p class="text-sm text-blue-700 mt-1">Please provide at least one contact method: either phone number or email address.</p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-input" %>
    </div>

    <div class="contact-method-field" data-contact-type="email">
      <label class="form-label flex items-center gap-2">
        <%= form.label :email, "Email", class: "inline" %>
        <span class="text-xs px-2 py-1 rounded-full contact-status-badge" data-contact-validation-target="emailStatus">Optional*</span>
      </label>
      <%= form.email_field :email, class: "form-input contact-input", 
          data: { 
            contact_validation_target: "emailInput",
            action: "input->contact-validation#validateEmail blur->contact-validation#validateEmail"
          }, 
          placeholder: "example@company.com" %>
      <div class="contact-feedback mt-1 text-xs" data-contact-validation-target="emailFeedback"></div>
    </div>

    <div class="contact-method-field" data-contact-type="phone">
      <label class="form-label flex items-center gap-2">
        <%= form.label :phone, "Phone", class: "inline" %>
        <span class="text-xs px-2 py-1 rounded-full contact-status-badge" data-contact-validation-target="phoneStatus">Optional*</span>
      </label>
      <%= form.telephone_field :phone, class: "form-input contact-input", 
          data: { 
            contact_validation_target: "phoneInput",
            action: "input->contact-validation#validatePhone blur->contact-validation#validatePhone"
          }, 
          placeholder: "+34694288334 or 694288334", 
          title: "Enter phone number with country code (e.g., +34694288334) or Spanish number (defaults to +34)" %>
      <div class="contact-feedback mt-1 text-xs" data-contact-validation-target="phoneFeedback">
        <span class="text-gray-500">Include country code (+34 for Spain) or enter Spanish number without code</span>
      </div>
    </div>

    <div>
      <%= form.label :status, class: "form-label" %>
      <%= form.select :status, 
          options_for_select([
            ['New', 'new'],
            ['Contacted', 'contacted'], 
            ['Qualified', 'qualified'],
            ['Closed', 'closed']
          ], lead.status), 
          { prompt: 'Select status...' }, 
          { class: "form-input" } %>
    </div>
  </div>

  <!-- Contact Methods Footer Note -->
  <div class="text-xs text-gray-500 mt-2">
    <span class="font-medium">*</span> At least one contact method (email or phone) is required
  </div>

  <div>
    <%= form.label :notes, class: "form-label" %>
    <%= form.text_area :notes, rows: 3, class: "form-input", placeholder: "Add any notes about this lead..." %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to 'Cancel', lead.persisted? ? lead : leads_path, class: "btn-secondary" %>
    <%= form.submit class: "btn-primary" %>
  </div>
<% end %>
